# Toggle strict client-side emotion sanitization (default: true)
# When true, profanity/abusive/sexual terms are replaced with "불쾌해",
# non-Korean inputs are rejected to a safe label, and length is clamped to 2–5 chars.
EMOTION_SANITIZE_STRICT=true

## Auto hard reset (displays full reload)
# Server-side broadcast interval (ms). Default 2,400,000 (40 minutes). 0 to disable.
HARD_RESET_INTERVAL_MS=2400000
# Client-side fallback interval (ms). Default 0 (disabled). Set to 2,400,000 to enable.
NEXT_PUBLIC_HARD_RESET_FALLBACK_MS=0

## Philips Hue (Remote API / Render-friendly)
# If you want Render to control Hue without a LAN tunnel, use Hue Remote API.
# You still need your bridge identifier in HUE_USERNAME (the bridge "username"/id used in Hue API routing).
#
# Enable Hue output (required for /api/lighttest and controller-driven Hue)
HUE_ENABLED=false
HUE_REMOTE_ENABLED=false

# Targets (optional)
HUE_LIGHT_IDS=
HUE_GROUP_ID=

# Remote API routing requires your bridge username/id
HUE_USERNAME=

# OAuth app credentials (keep secret!)
HUE_CLIENT_ID=
HUE_CLIENT_SECRET=
HUE_REDIRECT_URL=

# Tokens (rotate as needed)
HUE_ACCESS_TOKEN=
HUE_REFRESH_TOKEN=

# Protects POST /api/hue/refresh (returns tokens!)
HUE_ADMIN_TOKEN=

## Optional: protect POST /api/lighttest with a header
# If you set these, the browser UI (/lighttest) will return "Unauthorized" unless it also sends the header.
HUE_CONTROL_REQUIRE_TOKEN=false
HUE_CONTROL_TOKEN=


